<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#768"
    android:paddingBottom="20dp"
    tools:context="doubled.ipureapp.com.mp6.MainActivity">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Tên bài hát"
        android:textColor="#fff"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <ImageButton
        android:id="@+id/btnPrev"
        android:background="@null"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/previous"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"/>

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/play"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btnPrev"
        android:layout_marginLeft="50dp"/>

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/stop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btnPlay"
        android:layout_marginLeft="50dp"/>

    <ImageButton
        android:id="@+id/btnNext"
        android:background="@null"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>

    <SeekBar
        android:id="@+id/seekBarSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPlay"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/txtTimeSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_above="@id/seekBarSong"
        android:text="00:00"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txtTimeSongTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_above="@id/seekBarSong"
        android:layout_alignParentEnd="true"
        android:text="00:00"
        android:layout_marginRight="10dp"/>


    <ImageView
        android:id="@+id/img_Hinh"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/btnPrev"
        android:layout_marginBottom="70dp"
        android:src="@drawable/icondiskmusic"/>


</RelativeLayout>
